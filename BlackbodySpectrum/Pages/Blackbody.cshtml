@page
@model BlackbodySpectrum.Pages.BlackbodyModel

<h1>Blackbody Radiation Spectrum</h1>

<p>Temperature: 5000 K (Default)</p>

<svg width="600" height="400" viewBox="0 0 600 400" style="border:1px solid black;">
    @for (int i = 0; i < Model.Wavelengths.Length - 1; i++)
    {
        <line x1="@((i * 600) / @Model.Wavelengths.Length)" y1="@(400 - Model.Intensities[i] * 1e12)" 
              x2="@(((i + 1) * 600) / @Model.Wavelengths.Length)" y2="@(400 - Model.Intensities[i + 1] * 1e12)" 
              style="stroke:blue;stroke-width:2" />
    }
</svg>
