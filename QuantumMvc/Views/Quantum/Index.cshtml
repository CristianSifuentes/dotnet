@model QuantumMvc.Models.QuantumState
@{
    ViewData["Title"] = "Quantum Superposition";
}

<h1>Quantum Superposition</h1>
<p>This page simulates a quantum state in superposition and allows measurement.</p>

<div>
    <h3>Superposition State</h3>
    <p><strong>Amplitude |0⟩:</strong> @Model.State0Amplitude</p>
    <p><strong>Amplitude |1⟩:</strong> @Model.State1Amplitude</p>
    <p><strong>Probability |0⟩:</strong> @Model.Probability0</p>
    <p><strong>Probability |1⟩:</strong> @Model.Probability1</p>
</div>

@if (Model.MeasuredState != null)
{
    <div>
        <h3>Measurement Result</h3>
        <p><strong>Measured State:</strong> @Model.MeasuredState</p>
    </div>
}

<form asp-action="Measure" method="post">
    <input type="hidden" asp-for="Probability0" />
    <input type="hidden" asp-for="Probability1" />
    <button type="submit" class="btn btn-primary">Measure Quantum State</button>
</form>
